<% layout('/layout/boilerplate') %>
    <link rel="stylesheet" href="style.css">
    <div class="d-flex flex-column  w-75">
        <h1 class="pt-4">Finishing up</h1>
        <p class="text-muted">Double-check everything looks OK before confirming.</p>
        <div class="row pb-3  mx-0">
            <div class="card px-3 pt-3">
                <% let sum=0 %>
                    <div class="d-flex flex-row">
                        <div>
                            <p class="fw-bold pb-0 mb-0">
                                <% if(total.btnradio==="9" ){ %>
                                    Arcade(<%=total.checkbox? "Yearly" : "Monthly" %>)
                                        <% } else if(total.btnradio==="12" ){ %>
                                            Advanced(<%=total.checkbox? "Yearly" : "Monthly" %>)
                                                <% } else if(total.btnradio==="15" ){ %>
                                                    Pro(<%=total.checkbox? "Yearly" : "Monthly" %>)
                                                        <% } %>
                            </p>

                            <a href="/selectPlan">Change</a>
                        </div>
                        <p class="ms-auto fw-bold mt-auto">
                            +$<%= total.checkbox? `${parseInt(total.btnradio)*10}/yr` : `${total.btnradio}/mo` %>
                        </p>
                    </div>
                    <hr class="card-text">
                    <% if(check&&total.checkbox) {%>
                        <% for(let ind of check){ %>
                            <% sum+=parseInt(valueAddon[ind-1]*10) %>
                                <div class="d-flex flex-row">
                                    <p class="text-muted">
                                        <%= selectAddon[ind-1] %>
                                    </p>
                                    <p class="ms-auto">
                                        +$<%= valueAddon[ind-1]*10 %>/yr
                                    </p>
                                </div>
                                <% } } else if(!total.checkbox){%>
                                    <% for(let ind of check){ %>
                                        <% sum+=parseInt(valueAddon[ind-1]) %>
                                            <div class="d-flex flex-row">
                                                <p class="text-muted">
                                                    <%= selectAddon[ind-1] %>
                                                </p>
                                                <p class="ms-auto">
                                                    +$<%= valueAddon[ind-1] %>/mo
                                                </p>
                                            </div>
                                            <% } } %>
            </div>
        </div>

        <% if(total.checkbox){ %>
            <% sum+=parseInt(total.btnradio)*10 %>
                <% } else{ %>
                    <% sum+=parseInt(total.btnradio) %>
                        <% } %>
                            <div class="d-flex flex-row  px-3 pt-3">
                                <p class="text-muted">
                                    Total(<%= total.checkbox? "per year" : "per month" %>)
                                </p>
                                <p class="ms-auto fw-bold fs-5 text-primary">
                                    +$<%= sum %>/<%= total.checkbox? "yr" : "mo" %>
                                </p>

                            </div>

                            <div class="row py-3 mt-auto  mx-0 px-0">
                                <div class="col d-flex justify-content-start px-0">
                                    <a href="/total" class="btn btn-light border-0">Go back</a>
                                </div>
                                <div class="col d-flex justify-content-end px-0">
                                    <a href="/finish" class="btn btn-primary">Confirm</a>
                                </div>
                            </div>

    </div>
    <script src="/forth.js">

    </script>
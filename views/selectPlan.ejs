<% layout('/layout/boilerplate') %>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="checkbox.css">


    <form method="POST" action="/total" id="form" class="d-flex flex-column needs-validation" novalidate>
        <H1>Select plan
        </H1>
        <p class="text-muted">You have the option of monthly or yearly billing.</p>
        <div class="row">
            <!-- <div class="btn-group" role="group"> -->

            <div class="col-md-4 mb-3">
                <input type="radio" class="btn-check" id="btn-check1" name="btnradio" autocomplete="off" required
                    value="<%=value[0]  %>">
                <label class="btn btn-light d-flex flex-row flex-md-column align-items-start" for="btn-check1">
                    <div><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40">
                            <g fill="none" fill-rule="evenodd">
                                <circle cx="20" cy="20" r="20" fill="#FFAF7E" />
                                <path fill="#FFF" fill-rule="nonzero"
                                    d="M24.995 18.005h-3.998v5.998h-2v-5.998H15a1 1 0 0 0-1 1V29a1 1 0 0 0 1 1h9.995a1 1 0 0 0 1-1v-9.995a1 1 0 0 0-1-1Zm-5.997 8.996h-2v-1.999h2v2Zm2-11.175a2.999 2.999 0 1 0-2 0v2.18h2v-2.18Z" />
                            </g>
                        </svg>
                    </div>
                    <div class="pt-md-5  px-3 px-md-0 mx-0 d-flex align-items-start flex-column">
                        <p class="fw-bold my-0 py-0">Arcade</p>
                        <p class="price text-muted my-0 py-0">$9/mo</p>
                        <p class="yearly d-none my-0 py-0">2 months free</p>
                    </div>
                </label>

            </div>
            <div class="col-md-4 mb-3">
                <input type="radio" class="btn-check" id="btn-check2" name="btnradio" autocomplete="off"
                    value="<%=value[1]  %>">
                <label class="btn btn-light d-flex flex-row flex-md-column align-items-start" for="btn-check2">
                    <div><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40">
                            <g fill="none" fill-rule="evenodd">
                                <circle cx="20" cy="20" r="20" fill="#F9818E" />
                                <path fill="#FFF" fill-rule="nonzero"
                                    d="M25.057 15H14.944C12.212 15 10 17.03 10 19.885c0 2.857 2.212 4.936 4.944 4.936h10.113c2.733 0 4.943-2.08 4.943-4.936S27.79 15 25.057 15ZM17.5 20.388c0 .12-.108.237-.234.237h-1.552v1.569c0 .126-.138.217-.259.217H14.5c-.118 0-.213-.086-.213-.203v-1.583h-1.569c-.126 0-.217-.139-.217-.26v-.956c0-.117.086-.213.202-.213h1.584v-1.554c0-.125.082-.231.203-.231h.989c.12 0 .236.108.236.234v1.551h1.555c.125 0 .231.083.231.204v.988Zm5.347.393a.862.862 0 0 1-.869-.855c0-.472.39-.856.869-.856.481 0 .87.384.87.856 0 .471-.389.855-.87.855Zm1.9 1.866a.86.86 0 0 1-.87-.852.86.86 0 0 1 .87-.855c.48 0 .87.38.87.855a.86.86 0 0 1-.87.852Zm0-3.736a.862.862 0 0 1-.87-.854c0-.472.39-.856.87-.856s.87.384.87.856a.862.862 0 0 1-.87.854Zm1.899 1.87a.862.862 0 0 1-.868-.855c0-.472.389-.856.868-.856s.868.384.868.856a.862.862 0 0 1-.868.855Z" />
                            </g>
                        </svg></div>
                    <div class="pt-md-5  px-3 px-md-0 mx-0 d-flex align-items-start flex-column">
                        <p class="fw-bold my-0 py-0">Advanced</p>
                        <p class="price text-muted my-0 py-0">$12/mo</p>
                        <p class="yearly d-none my-0 py-0">2 months free</p>
                    </div>

                </label>
            </div>
            <div class="col-md-4">
                <input type="radio" class="btn-check" id="btn-check3" name="btnradio" autocomplete="off"
                    value="<%=value[2]  %>">
                <label class="btn btn-light d-flex flex-row flex-md-column align-items-start" for="btn-check3">
                    <div><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40">
                            <g fill="none" fill-rule="evenodd">
                                <circle cx="20" cy="20" r="20" fill="#483EFF" />
                                <path fill="#FFF" fill-rule="nonzero"
                                    d="M26.666 13H13.334A3.333 3.333 0 0 0 10 16.333v7.193a3.447 3.447 0 0 0 2.14 3.24c1.238.5 2.656.182 3.56-.8L18.52 23h2.96l2.82 2.966a3.2 3.2 0 0 0 3.56.8 3.447 3.447 0 0 0 2.14-3.24v-7.193A3.333 3.333 0 0 0 26.666 13Zm-9.333 6H16v1.333a.667.667 0 0 1-1.333 0V19h-1.333a.667.667 0 0 1 0-1.334h1.333v-1.333a.667.667 0 1 1 1.333 0v1.333h1.333a.667.667 0 1 1 0 1.334Zm7.333 2a2.667 2.667 0 1 1 0-5.333 2.667 2.667 0 0 1 0 5.333ZM26 18.333a1.333 1.333 0 1 1-2.667 0 1.333 1.333 0 0 1 2.667 0Z" />
                            </g>
                        </svg></div>
                    <div class="pt-md-5  px-3 px-md-0 mx-0 d-flex align-items-start flex-column">
                        <p class="fw-bold my-0 py-0">Pro</p>
                        <p class="price text-muted my-0 py-0">$15/mo</p>
                        <p class="yearly d-none my-0 py-0">2 months free</p>
                    </div>

                </label>
                <div class="invalid-feedback">
                    You need to choose one plan
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

        </div>
        <div class="my-3 mt-md-5 py-md-3 checkboxDiv rounded-2 d-flex justify-content-center ">
            <DIV CLASS="row  w-100">
                <div class="col col-md-5 d-flex justify-content-end">
                    <label class="myBold fw-bold" for="switch">Monthly</label>
                </div>
                <div class="col col-md-2 d-flex justify-content-center">
                    <input class="px-0 mx-0 align-items-center" type="checkbox" role="switch" name="checkbox"
                        id="switch">
                    <label for="switch" id="switchLabel">Toggle</label>
                </div>
                <div class="col col-md-5">
                    <label class="myBold text-muted" for="switch">Yearly</label>
                </div>
            </DIV>
        </div>



        <div class="row pt-md-5 mt-auto">
            <div class="col d-flex justify-content-start">
                <a href="/" class="btn btn-light border-0">Go back</a>
            </div>
            <div class="col d-flex justify-content-end">
                <button class="btn btn-primary px-md-4 py-md-2" type="submit">Next Step</button>
            </div>
        </div>
    </form>


    <script src="/validation.js">

    </script>
    <script src="/onChange.js">

    </script>